@model PostVM 
@{
    ViewBag.Title = "CreateNewPost";
}
<div class="col-md-10 p-5">
    <h2 class="h1 mb-5 custom_color--main-color">Create new post</h2>

    <form asp-controller="Client" asp-action="CreateNewPost" method="post"> 
        <input type="hidden" asp-for="ClientId" value="@ViewBag.ClientId" />
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Post Description</label>
            <textarea asp-for="Description" rows="10" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Job Category</label>
            <select asp-for="CategoryId" asp-items="@(SelectList)ViewBag.Categories" class="form-select"> </select>
        </div>
        <div class="mb-3">
            <label asp-for="Budget" class="form-label">Initial Budget</label>
            <input asp-for="Budget" type="number"  class="form-control" placeholder="'minimum number is 10$'" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center">
            <button class="custom_btn--main_color btn btn-primary"
                    type="submit">
                Publish post
            </button>
        </div>
    </form>
</div> 