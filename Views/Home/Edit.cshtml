@model ProfileVM
@{
    ViewBag.Title = "Edit"; 
}

<div class="RegisterForm">
    <div class="container">
        <div class="row">
            <h3 class="h2 RegisterForm--title text-center mb-5">
                Edit Your Profile
            </h3>

            <form asp-controller="Home" asp-action="Edit" enctype="multipart/form-data" method="post" class="RegisterForm--mainform offset-3 col-6">
                <input type="hidden" asp-for="Id" class="form-control mb-2" />
                <div asp-validation-summary="All" asp class="text-danger"></div><br />
                <label asp-for="Name">Username</label>
                <input asp-for="Name" type="text" class="form-control mb-2" />
                <span asp-validation-for="Name" class="text-danger"></span><br />
                <label asp-for="Email">Your Email</label>
                <input asp-for="Email" type="text" class="form-control mb-2" />
                <span asp-validation-for="Email" class="text-danger"></span><br />
                <label asp-for="Number">Number</label>
                <input asp-for="Number" type="text" class="form-control mb-2" />
                <span asp-validation-for="Number" class="text-danger"></span><br />
                <label asp-for="Photo">Upload Photo</label>
                <input asp-for="Photo" type="file" class="form-control mb-2" />
                <span asp-validation-for="Photo" class="text-danger"></span><br />
                <button type="submit" class="btn btn-primary mb-3 mt-3 d-block">
                    Edit
                </button>
            </form>
        </div>
    </div>
</div>