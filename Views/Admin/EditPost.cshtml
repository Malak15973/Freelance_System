@model PostVM 
@{
    ViewBag.Title = "EditPost";
}


<div class="RegisterForm">
    <div class="container">
        <div class="row">
            <h3 class="h2 RegisterForm--title text-center mb-5">
                Edit Post Data
            </h3>

            <form asp-controller="Admin" asp-action="EditPost" method="post" class="RegisterForm--mainform offset-3 col-6">
                <div asp-validation-summary="All" asp class="text-danger"></div><br />
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Post Description</label>
                    <textarea asp-for="Description" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Job Category</label>
                    <select asp-for="CategoryId" asp-items="@(SelectList)ViewBag.CategoriesList" class="form-select"> </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Budget" class="form-label">Initial Budget</label>
                    <input asp-for="Budget" type="number" class="form-control" placeholder="'minimum number is 10$'" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mb-3 mt-3 d-block">
                    Edit
                </button>
            </form>
        </div>
    </div>
</div>
