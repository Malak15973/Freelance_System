@model PostVM
@{
    ViewBag.Title = "DeletePost";
}


<div class="RegisterForm">
    <div class="container">
        <div class="row">
            <h3 class="h2 RegisterForm--title text-center mb-5 text-danger">
                Are You Sure To Delete This Post?
            </h3>

            <form asp-controller="Admin" asp-action="DeletePost" method="post" class="RegisterForm--mainform offset-3 col-6">
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Post Description</label>
                    <textarea asp-for="Description" readonly rows="10" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Job Category</label>
                    <input asp-for="CategoryName" readonly  class="form-control"  /> 
                </div>
                <div class="mb-3">
                    <label asp-for="Budget" class="form-label">Initial Budget</label>
                    <input asp-for="Budget" readonly type="number" class="form-control"  /> 
                </div>
                <button type="submit" style="background-color:red"  class="btn btn-danger mb-3 mt-3 d-block">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
