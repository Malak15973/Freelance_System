@model IQueryable<PostVM> 
@{
    ViewBag.Title = "Admin View Post";
}
 
<!-- Start Posts Table -->
<section class="posts_table">
    <div class="container">
        <div class="row">
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Project Title</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Category</th>
                    <th scope="col">Total Budget</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr class="p-5">
                        <th scope="row">@post.Description</th>
                        <td>@post.ClientName</td>
                        <td>@post.CategoryName</td>
                        <td>@post.Budget</td>
                        <td>
                            <a class="btn btn-outline-dark me-2 rounded-pill ps-4 pe-4" asp-controller="Admin" asp-action="EditPost" asp-route-id="@post.Id">
                                Edit
                            </a>
                            <a class="btn btn-outline-dark rounded-pill ps-4 pe-4"asp-controller="Admin" asp-action="DeletePost" asp-route-id="@post.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                } 
            </tbody>
        </table>
    </div>
</section>
<!-- End Posts Table -->
    