@model CreateRoleVM 
@{
    ViewBag.Title = "CreateRole";
}


<div class="RegisterForm">
    <div class="container">
        <div class="row">
            <h3 class="h2 RegisterForm--title text-center mb-5">
                Add New Role
            </h3>

            <form asp-controller="Admin" asp-action="CreateRole" method="post" class="RegisterForm--mainform offset-3 col-6">
                <div asp-validation-summary="All" asp class="text-danger"></div><br />
                
                <label asp-for="RoleName">Role Name</label>
                <input asp-for="RoleName" type="text" class="form-control mb-2" />
                <span asp-validation-for="RoleName" class="text-danger"></span><br />
                
                <button type="submit" class="btn btn-primary mb-3 mt-3 d-block">
                    Create Role
                </button>
            </form>
        </div>
    </div>
</div>


