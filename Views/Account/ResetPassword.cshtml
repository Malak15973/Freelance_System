@model ResetPasswordVM
@{
    ViewBag.Title = "ResetPassword";
}


<div class="LoginForm">
    <div class="container">
        <div class="row">
            <h3 class="h2 LoginForm--title text-center mb-5">
                Login to your account
            </h3>
            <form asp-controller="Account" asp-action="ResetPassword" method="post" class="LoginForm--mainform offset-3 col-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" /> 
                <label asp-for="Password">Enter your Password</label>
                <input asp-for="Password" type="password" class="form-control mb-2" />
                <label asp-for="ConfirmPassword">Confirm your Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control mb-2" />
                <button type="submit" class="btn btn-primary mb-3 mt-3 d-block">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div>